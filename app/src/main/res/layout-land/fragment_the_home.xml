<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TheHomeFragment"
        android:background="@color/BgBlue"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/BgBlue"
            tools:ignore="UselessParent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/the_shape_of_homepage"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                >

                <LinearLayout
                    android:id="@+id/mainLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="18dp"
                    android:layout_marginTop="15dp"

                    >

                    <!-- Mini Display: Date, Time, Current Temperature, Feels Like -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="100dp"
                        android:orientation="vertical"
                        >

                        <!-- Date and Time -->
                        <TextView
                            android:id="@+id/city_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mauritius"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <!-- Date and Time -->
                        <TextView
                            android:id="@+id/text_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date and time"
                            android:textColor="@color/white"
                            android:textSize="12sp"

                            />

                        <!-- Current Temperature -->
                        <TextView
                            android:id="@+id/text_current_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35°C"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <!-- Current Temperature -->
                        <TextView
                            android:id="@+id/weather_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light Rain"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/sun_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="150dp"
                            android:src="@drawable/snow" />

                    </LinearLayout>
                    <!-- Sun Icon -->


                </LinearLayout>

                <!-- Sunrise, Sunset, Daylight Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp"
                    android:paddingTop="20dp"
                    >
                    <!-- Wind Speed/Direction -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_wind_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_wind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wind Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>



                    <!-- UV Risk -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Text View for "UV Risk" -->
                        <TextView
                            android:id="@+id/uv_risk_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UV Risk "
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/uv_risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="UV Risk value"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                    </LinearLayout>


                </LinearLayout>

                <!-- Visibility, Max/Min Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp"
                    >

                    <!-- Sunrise -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Text View for "Sunrise" -->
                        <TextView
                            android:id="@+id/text_sunrise_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunrise"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <!-- Text View for displaying the sunrise time -->
                        <TextView
                            android:id="@+id/text_sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sunrise"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Min Temperature -->

                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Min Temperature Label -->
                        <TextView
                            android:id="@+id/temp_min_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="t° Min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <!-- Min Temperature Label value  -->
                        <TextView
                            android:id="@+id/temp_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Min Temp Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Max Temperature -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Max Temperature Label -->
                        <TextView
                            android:id="@+id/temp_max_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="t° Max"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <!-- Max Temperature Label value  -->
                        <TextView
                            android:id="@+id/temp_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Min Temp Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Visibility -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/visibility_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vis Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>


                </LinearLayout>

                <!-- Pressure, Humidity, Wind Speed/Direction -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"

                    >

                    <!-- Pressure -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_pressure_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pressure"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pressure Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>


                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_humidity_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Humidity Val"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Sunset -->
                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Text View for "Sunrise" -->
                        <TextView
                            android:id="@+id/text_sunset_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunset"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sunset"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <!-- 3-Day Forecast Section Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingStart="30dp"
            >
            <TextView
                android:id="@+id/forecast_threedays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Days Forecast"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <!-- 3-Day Forecast Section -->
        <LinearLayout
            android:id="@+id/forecast_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            >

            <!-- Today's Forecast -->
            <LinearLayout
                android:id="@+id/todayLinear"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@drawable/the_shape_of_homepage"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/first_day_condition"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Condition"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/forecast_today_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/snow"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />

                </LinearLayout>
                <!-- This is the line separator -->
                <View
                    android:layout_width="90dp"
                    android:layout_height="1dp"
                    android:background="@color/white" />
                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_firstday_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toady"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <!-- Tomorrow's Forecast -->
            <LinearLayout
                android:id="@+id/tommorrowLinear"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/the_shape_of_homepage"
                android:gravity="center"
                >

                <LinearLayout

                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/second_day_condition"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/forecast_tomorrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/day_rain"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Value "
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- This is the line separator -->
                <View
                    android:layout_width="90dp"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_secondday_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomorow"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Day After Tomorrow's Forecast -->
            <LinearLayout
                android:id="@+id/futureLinear"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/the_shape_of_homepage"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/third_day_condition"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/forecast_dayAfterTomorrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/day_snow_thunder"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_dayAfterTomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- This is the line separator -->
                <View
                    android:layout_width="90dp"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/forecast_thirdday_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Third Day "
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
